<?xml version="1.0" encoding="utf-8"?><!-- In principle, each app should have unique package -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rs.aleph.android.zadatak3">

    <!-- Declares that the app needs a permission to access internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.camera2"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Declares 1st (main) activity. Action "MAIN" and category "LAUNCHER" properties makes it visible in the application launcher -->
        <activity
            android:name="rs.aleph.android.zadatak3.activities.FirstActivity"
            android:label="@string/app_name"
            android:icon="@mipmap/ic_launcher"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declares 2nd activity -->
        <activity
            android:name="rs.aleph.android.zadatak3.activities.SecondActivity"
            android:label="@string/app_name"
            android:icon="@mipmap/ic_launcher"
            android:screenOrientation="portrait">

        </activity>
    </application>

</manifest>